<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Serve static files directly (sitemap, robots, images)
  RewriteCond %{REQUEST_URI} ^/(sitemap\.xml|robots\.txt|.*\.(png|jpg|jpeg|gif|svg|ico))$ [NC]
  RewriteRule ^ - [L]

  # Remove .html extension from URLs
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^([^\.]+)$ $1.html [NC,L]

  # Handle pretty URLs - rewrite to index.html for non-existent files/directories
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} !/\.well-known/acme-challenge/[0-9a-zA-Z_-]+$
  RewriteRule ^ index.html [QSA,L]

  # Cache headers for static assets
  <FilesMatch "^.*\.(?:css|js|woff|woff2|svg|eot|ttf)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # Set proper MIME types
  AddType text/html .html
  AddCharset UTF-8 .html
  AddType application/javascript .js
  AddType text/css .css
  AddType application/xml .xml
  AddType text/xml .xml
  AddCharset UTF-8 .xml
  AddType text/plain .txt

  # Enable gzip compression
  <IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
  </IfModule>
</IfModule>

# Set default character set
DefaultCharSet utf-8
